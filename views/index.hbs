    <!-- header section starts  -->

    <header class="header">

        <div class="header-1">

            <a href="/" class="logo"> <i class="fas fa-book"></i> FPTBook </a>

            <form action="/search?=" class="search-form" method="get">
                <input type="search" name="searchInput" placeholder="search here..." id="searchInput">
                <a href="/search"><button class="btn-search"><i class="fas fa-search"></i></button></i></a>

            </form>

            <div class="icons">
                <div id="search-btn" class="fas fa-search"></div>
                <a href="#" class="fas fa-heart"></a>
                <a href="/shoppingCart/viewCart" class="fas fa-shopping-cart"></a>
                <a href="/login" id="login-btn" class="fas fa-user"></a>
                <a href="/shoppingCart/viewProfile"><span class="header__navbar-user-name">{{user.name}}</span></a>

                <a href="/logout"><i class="fas fa-sign-out-alt"></i></a>

            </div>


        </div>

        <div class="header-2">
            <nav class="navbar">
                <a href="#home">home</a>
                <a href="#featured">The hottest product</a>
                <a href="#arrivals">All book</a>
